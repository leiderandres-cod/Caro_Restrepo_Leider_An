    <script>
        // Cargar foto guardada al iniciar
        window.addEventListener('load', () => {
            const savedPhoto = localStorage.getItem('profilePhoto');
            const profileImg = document.getElementById('profileImg');
            
            if (savedPhoto) {
                profileImg.src = savedPhoto;
            } else {
                // Imagen por defecto si no hay foto guardada
                profileImg.style.backgroundColor = '#2a2a2a';
                profileImg.style.display = 'flex';
                profileImg.style.alignItems = 'center';
                profileImg.style.justifyContent = 'center';
                profileImg.alt = 'üë§';
            }
            
            document.getElementById('hero').style.display = 'flex';
        });

        // Cambiar y guardar foto de perfil
        document.getElementById('photoInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const img = document.getElementById('profileImg');
                    img.src = event.target.result;
                    img.style.display = 'block';
                    // Guardar en localStorage
                    localStorage.setItem('profilePhoto', event.target.result);
                };
                reader.readAsDataURL(file);
            }
        });

        // Funci√≥n para mostrar secciones
        function showSection(sectionId) {
            // Ocultar todas las secciones
            const sections = document.querySelectorAll('.section, .hero');
            sections.forEach(section => {
                section.classList.remove('active');
                if (section.id === 'hero') {
                    section.style.display = 'none';
                }
            });

            // Mostrar la secci√≥n seleccionada
            if (sectionId === 'hero') {
                document.getElementById('hero').style.display = 'flex';
            } else {
                document.getElementById(sectionId).classList.add('active');
            }

            // Scroll suave al inicio
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
